<% unless @link.nil?%>
  <center>
    <% unless @link.id.nil? %>
    <h4>Here's your short url!</h4>
    <h4><%= link_to "#{@link.short}", fetch_original_url_link_path(@link) %></h4><% end %>
  </center>
<% end %>

<!-- table shows last three urls -->
<% unless @records.empty? %>
  <table>
    <thead>
      <tr>
        <th>Original URL</th>
        <th>Short-Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |link| %>
        <tr>
          <td><%= link.url %></td>
          <td><%= link_to "#{link.short}", fetch_original_url_link_path(link) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center>
    <h3><%= link_to "Click here for stats", stats_path %></h3>
  </center>
<% end %>


